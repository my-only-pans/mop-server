{
    "parser": "@typescript-eslint/parser", // Specifies the ESLint parser
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/semi": ["error", "always"], // or "never" depending on your preference
        "@typescript-eslint/strict-boolean-expressions": 0    }
}
